# Copy to .env and fill values before running docker-compose or local dev

# Postgres credentials (used by docker-compose)
POSTGRES_DB=mybotdb
POSTGRES_USER=mybotuser
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme
PGADMIN_PORT=8080

# Bot configuration (used by config.load_config)
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
ADMIN_IDS=123456789,987654321

# Database connection used by the app (DB_HOST should be 'postgres' in compose)
DB_NAME=mybotdb
DB_HOST=postgres
DB_USER=mybotuser
DB_PASSWORD=changeme
DB_PORT=5432

# Local image folder inside container (must match IMAGE_PATH in config or .env)
IMAGE_PATH=/app/images
